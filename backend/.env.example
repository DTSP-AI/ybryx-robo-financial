# Application
DEBUG=True
ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Database - Postgres/Supabase
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ybryx
# Or use Supabase connection string:
# DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres

# Supabase (REQUIRED for unified memory system)
SUPABASE_URL=https://[PROJECT_REF].supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# LLM APIs
OPENAI_API_KEY=sk-...
OPENAI_ORG_ID=org-...
ANTHROPIC_API_KEY=sk-ant-...

# Memory - Mem0 (for vector embeddings and semantic recall)
MEM0_API_KEY=your_mem0_api_key
MEM0_HOST=https://api.mem0.ai
MEM0_BACKEND=pgvector
# Or if self-hosted:
# MEM0_HOST=http://localhost:8001

# Vector Embeddings (for goal/belief vectors)
VECTOR_EMBEDDING_MODEL=text-embedding-3-large
VECTOR_EMBEDDING_DIMENSIONS=1536

# Vector Store (if not using Mem0)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key

# Security
SECRET_KEY=your-secret-key-min-32-chars-change-in-production

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
